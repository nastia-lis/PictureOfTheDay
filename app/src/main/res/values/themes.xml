<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PictureOfTheDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">?attr/colorSecondaryVariant</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>
        <item name="materialButtonStyle">@style/ChipGroup</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Sunshine" parent="Theme.PictureOfTheDay">
        <item name="colorPrimary">@color/sunshine_primary</item>
        <item name="colorPrimaryVariant">@color/sunshine_primary_variant</item>
        <item name="colorOnPrimary">@color/sunshine_on_primary</item>
        <item name="colorSecondary">@color/sunshine_secondary</item>
        <item name="colorSecondaryVariant">@color/sunshine_secondary_variant</item>
        <item name="colorOnSecondary">@color/sunshine_on_secondary</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">?attr/colorSecondaryVariant</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>
        <item name="materialButtonStyle">@style/ChipGroup</item>
    </style>

    <style name="Theme.Space" parent="Theme.PictureOfTheDay">
        <item name="colorPrimary">@color/primary_space</item>
        <item name="colorPrimaryVariant">@color/primary_variant_space</item>
        <item name="colorOnPrimary">@color/on_primary_space</item>
        <item name="colorSecondary">@color/secondary_space</item>
        <item name="colorSecondaryVariant">@color/secondary_variant_space</item>
        <item name="colorOnSecondary">@color/on_secondary_space</item>
        <item name="colorError">@color/design_default_color_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/primary_surface</item>
        <item name="colorOnSurface">@color/on_primary_space</item>
    </style>
</resources>